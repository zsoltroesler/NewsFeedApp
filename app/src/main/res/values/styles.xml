<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3e4d50</item>
        <item name="colorPrimaryDark">#2a3436</item>
        <item name="colorAccent">#86cccc</item>
    </style>

    <!-- Splash activity theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <!-- Title of the article in list_item.xml -->
    <style name="TextViewTitle">
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/dimen_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- Writer of the article in list_item.xml -->
    <style name="TextViewWriter">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/dimen_writer_size</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Section of the article in list_item.xml -->
    <style name="TextViewSection">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/dimen_section_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- Date of the article in list_item.xml -->
    <style name="TextViewDate">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/dimen_date_size</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

</resources>
